# -*- coding: utf-8 -*-
# UTF-8 encoding when using korean
n = int(input())
answer = list(map(int, input().split()))
max_answer = max(answer)
dp = [0 for _ in range(n+1)]
dp[0] = answer[0]

for i in range(1, n):
	if answer[i-1]+1 == answer[i]:
		dp[i] = dp[i-1]+answer[i]
	else:
		dp[i] = answer[i]

print(max(max(dp), max_answer))